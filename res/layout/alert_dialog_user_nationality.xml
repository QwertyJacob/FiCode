<!-- Root Layout -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:id="@+id/user_nationality_alert_dialog_layout_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/tvAlertDialogUserNationality"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android1:paddingBottom="10dp"
        android1:paddingTop="20dp"
        android:text="@string/AlertDialogUserNationality" />

    <RadioGroup
        android1:id="@+id/rgUserNationality"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"        
        android1:layout_centerHorizontal="true"
        android1:orientation="horizontal"
        android1:paddingBottom="30dp"
        android1:paddingTop="10dp"
        android1:layout_below="@id/tvAlertDialogUserNationality" >

        <RadioButton
            android1:id="@+id/rbItaly"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:checked="true"
            android1:text="@string/Italy" />

        <RadioButton
            android1:id="@+id/rbAbroad"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:text="@string/Abroad" />
    </RadioGroup>

</RelativeLayout>